{%- comment -%}
  Dementia Aide — Disclaimer (Short)
  File: sections/disclaimer-short.liquid
  Add this section to any page and drag it above the footer.
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }}-pad {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media (min-width: 750px) {
    .section-{{ section.id }}-pad {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width {% if section.settings.narrow %}page-width--narrow{% endif %} section-{{ section.id }}-pad">
    <div role="note"
         aria-label="{{ section.settings.heading | default: 'Disclaimer' | escape }}"
         style="margin-top:30px; padding:15px; font-size:14px; line-height:1.6; {% if section.settings.show_border %}border-top:1px solid #ccc;{% endif %}">
      {% if section.settings.show_heading %}
        <p><strong>{{ section.settings.heading | default: 'Disclaimer' }}</strong></p>
      {% endif %}
      <p>
        All text, charts, graphics, images, videos, downloads, and tools on this page (“Content”) are for general educational purposes only and are <strong>not</strong> medical advice. Dementia varies by person and diagnosis is complex; summaries and comparisons are simplified. We do not guarantee accuracy or completeness. <strong>Use at your own risk.</strong> To the fullest extent permitted by law, Dementia Aide LLC disclaims liability for any loss or damages arising from use of or reliance on the Content.
        {% if section.settings.full_disclaimer_page != blank %}
          <br><a href="{{ section.settings.full_disclaimer_page.url }}">{{ section.settings.link_text | default: 'Read the full legal disclaimer' }}</a>.
        {% endif %}
      </p>
      <p><strong>Copyright:</strong> &copy; {{ 'now' | date: '%Y' }} Dementia Aide LLC. All rights reserved.</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Disclaimer — Short",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "checkbox", "id": "show_heading", "label": "Show heading", "default": true },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Disclaimer" },
    { "type": "page", "id": "full_disclaimer_page", "label": "Link to full disclaimer page" },
    { "type": "text", "id": "link_text", "label": "Link text", "default": "Read the full legal disclaimer" },
    { "type": "checkbox", "id": "narrow", "label": "Use narrow width", "default": true },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "checkbox", "id": "show_border", "label": "Show top border", "default": true },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 20 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 20 }
  ],
  "presets": [
    { "name": "Disclaimer — Short" }
  ]
}
{% endschema %}
